@model Exam
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Class</title>
    <link rel="stylesheet" href="~/css/examadd.css">
    <link rel="stylesheet" href="~/css />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="container">
        <h2>Edit Exam</h2>
        <form method="post" class="student-form">
            <div class="form-section">
                <!-- Student Details -->
                <div class="form-group">
                    <label for="name">Exam Name *</label>
                    <input asp-for="ExamName" id="name" required>
                </div>
                <div class="form-group">
                    <label for="class">Class *</label>
                    <select asp-for="ClassId" asp-items="@ViewData["ClassList"] as IEnumerable<SelectListItem>" id="department" required>
                        <option value="" disabled selected>Please Select Class</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Exam Date *</label>
                    <input asp-for="ExamDate" id="name" required>
                </div>
            </div>
            <!-- Buttons -->
            <div class="form-buttons">
                <button type="submit" class="btn btn-success">Save</button>
                <button asp-area="Admin" asp-controller="Exam" asp-action="Index" class="btn btn-primary">Back to list</button>
            </div>
        </form>
    </div>
</body>
</html>
