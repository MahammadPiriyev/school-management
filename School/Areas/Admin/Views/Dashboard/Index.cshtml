@model DashboardViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Stats</title>
    <link href="~/css/dashboard.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <div class="stat-row">
            <div class="card bg-success">
                <div class="icon">
                    <img src="https://cdn-icons-png.flaticon.com/512/194/194931.png" alt="Students Icon">
                </div>
                <div class="content">
                    <div class="title">Students</div>
                    <div class="value">@Model.StudentsCount</div>
                </div>
            </div>
            <div class="card bg-warning">
                <div class="icon">
                    <img src="images/teacher.png" alt="Students Icon">
                </div>
                <div class="content">
                    <div class="title">Teachers</div>
                    <div class="value">@Model.TeachersCount</div>
                </div>
            </div>
            <div class="card bg-danger">
                <div class="icon">
                    <img src="images/teacher.png" alt="Students Icon">
                </div>
                <div class="content">
                    <div class="title">Classes</div>
                    <div class="value">@Model.ClassCount</div>
                </div>
            </div>
        </div>
        <div class="line-container">
            <div class="line"></div>
            <div class="text">Quick Access <i class="fa-solid fa-lightbulb" style="color: #FFD43B;"></i></div>
            <div class="line"></div>
        </div>
        <div class="card-container">
            <a class="card" asp-area="Admin" asp-controller="Student" asp-action="Index">
                <i class="fas fa-user-graduate"></i>
                <p>Students</p>
            </a>
            <a class="card" asp-area="Admin" asp-controller="Teacher" asp-action="Index">
                <i class="fas fa-chalkboard-teacher"></i>
                <p>Teachers</p>
            </a>         
            <a class="card" asp-area="Admin" asp-controller="Subject" asp-action="Index">
                <i class="fas fa-book"></i>
                <p>Subjects</p>
            </a>
            <a class="card" asp-area="Admin" asp-controller="Class" asp-action="Index">
                <i class="fas fa-users"></i>
                <p>Class</p>
            </a>
            <a class="card" @* asp-area="Admin" asp-controller="Parent" asp-action="Index" *@>
                <i class="fas fa-user"></i>
                <p>Parents (Soon)</p>
            </a>
            <a class="card" @* asp-area="Admin" asp-controller="Attendance" asp-action="Index" *@>
                <i class="fas fa-calendar-check"></i>
                <p>Attendance (Soon)</p>
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
